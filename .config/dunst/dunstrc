[global]
	follow = mouse
	# geometry [{width}]x{height}][+/-{x}+/-{y}]
	geometry = "300x4-10-10"
	indicate_hidden = yes
	separator_height = 2

	padding = 8
	horizontal_padding = 8
	idle_threshold = 120

	frame_width = 2
	separator_color = frame

	font = curie 8
	line_height = 0

	markup = full
    #   %a  appname
    #   %s  summary
    #   %b  body
    #   %i  iconname (including its path)
    #   %I  iconname (without its path)
    #   %p  progress value if set ([  0%] to [100%]) or nothing
	format = "%a\n%s\n%b"
	alignment = left

	show_age_threshold = 60

	word_wrap = no
	ellipsize = end
	sort = yes
	ignore_newline = no

	stack_duplicates = true
	hide_duplicate_count = false
	show_indicators = no

	icon_position = right
	max_icon_size = 48
	icon_path = /usr/share/icons/gnome/16x16/status/:/usr/share/icons/gnome/16x16/devices/

	sticky_history = yes
	history_length = 10

	dmenu = /usr/bin/dmenu -p dunst:
	browser = /usr/bin/chromium
	always_run_script = true

[shortcuts]
	close = ctrl+space
	close_all = ctrl+shift+space
	history = ctrl+grave
	context = ctrl+shift+period

[urgency_low]
	background = "#1D1F21"
	foreground = "#C5C8C6"
	frame_color = "#8C9440"
	timeout = 5

[urgency_normal]
	background = "#1D1F21"
	foreground = "#C5C8C6"
	frame_color = "#5F819D"
	timeout = 5

[urgency_critical]
	background = "#1D1F21"
	foreground = "#C5C8C6"
	frame_color = "#A54242"
	timeout = 10
