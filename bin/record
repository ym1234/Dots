#!/bin/sh
#
# modified from http://github.com/mitchweaver/bin
# Records a selected rectangle with ffmpeg.
#

TMPDIR="${TMPDIR:-/tmp}"
pid="$(< $TMPDIR/record)"
if [[ -d /proc/"$pid/fd" ]]; then
	name="$(< '/tmp/record_name')"

	kill -s 2 "$pid"
	rm "$TMPDIR/record"
	rm "$TMPDIR/record_name"

	# wait for ffmpeg to finish writing the file and exiting
	sleep 0.5

	x=$(curl -sF"file=@$name" https://0x0.st) || notify-send -a "Recording: Upload failed" "$name" && exit # TODO: check if this actually does what you want it to do
	echo "$x" | xclip -selection clipboard -in
	notify-send -a "Recording: Upload succeeded" "$x"
else
	readarray -t -d' ' coord <<< $(slop -q -f '%x %y %w %h') # XXX: don't quote, or you'll end up with a newline in the last array member
	[[ ${#coord[@]} = 0 ]] && exit 1

name="$HOME/Drive/Media/Recordings/record-$(date +'%F:%R:%S').mp4"
	ffmpeg -nostdin -y -f x11grab -s ${coord[2]}x${coord[3]} -r 30 -i :0.0+${coord[0]},${coord[1]} -qscale 0 "$name" > /dev/null 2>&1 & disown

	echo $! > $TMPDIR/record
	echo "$name" > $TMPDIR/record_name
fi

